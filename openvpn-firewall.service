[Unit]
Description=Firewall setup for OpenVPN with port forwarding
After=network.target
Wants=network.target

[Service]
Type=oneshot
ExecStart=/opt/openvpn/firewall.sh
RemainAfterExit=true

[Install]
WantedBy=multi-user.target

